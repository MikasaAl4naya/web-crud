{% from "/macros/btn.twig" import btn as btn %}
{% extends "__layout.twig" %}

{% block content %}
<div class="row col-10">
    {% for object in bands %}
    <div class="m text-center col-3" style=" border: 1.5px solid gray">
        <div class="mt-2">
            <img class = "m-2" src="{{ object.image}}" style="width: 200px;"/>
            <div class="row m-2">
                <a class = "btn btn-primary" href="/bands/{{object.id}}">{{object.title}}</a>
            </div>
            <div class="mb-4">
                <a class = "btn btn-link" href="/bands/{{object.id}}/image">Картинка</a>
                <a class = "btn btn-link" href="/bands/{{object.id}}/info">Описание</a>
            </div> 
        </div>
    </div>
    {% endfor %}
</div>
    

{% endblock %}